<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@android:color/darker_gray">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="100dp"
            android:backgroundTint="#FFFEF1"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:padding="20dp">

            <TableRow
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₱0"
                    android:padding="10dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#26A910"
                    />
            </TableRow>

            <TableRow
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₱0"
                    android:padding="10dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#AF2222"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.8"
        android:gravity="center_horizontal"
        android:background="@android:color/darker_gray">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black" />

            <TableRow
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_textbalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₱"
                    android:padding="10dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@android:color/darker_gray">

        <Button
            android:id="@+id/btn_add_expense"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#AA4A44"
            android:text="+ Expense"/>

        <Button
            android:id="@+id/btn_add_income"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#556B2F"
            android:text="+ Income"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="3"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/btn_transactions"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/transaction"
            android:contentDescription="transaction" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:src="@drawable/settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="settings" />


    </LinearLayout>

</LinearLayout>

